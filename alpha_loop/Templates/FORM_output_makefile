include ../Source/make_opts

ifeq ($(origin GCC),undefined)
GCC=gcc
endif
LIBBPATH=../lib
SOURCE=numerator.c
LIBRARY=libFORM_numerators.so

all: $(LIBBPATH)/$(LIBRARY)

$(LIBBPATH)/$(LIBRARY): $(SOURCE)
	$(GCC) --shared -O3 -fcx-fortran-rules -fcx-limited-range -lm -o $@ $^

clean:
	rm -f $(LIBBPATH)/$(LIBRARY)
