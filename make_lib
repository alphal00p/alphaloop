#!/bin/bash

# Compilers:                                                                                                                                              
UNAME_S=$(uname -s)
PWD=$(pwd)

MODE=$1
[ -z "$MODE" ] && MODE=debug

BUILD=$2
[ -z "$BUILD" ] && BUILD=ltd


case ${UNAME_S} in
    Linux*)
	SO_LTD=target/$MODE/libltd.so;;
    Darwin*)
	SO_LTD=target/$MODE/libltd.dylib;;
    *)
	echo "UNKNOWN:${UNAME_S}"
	exit 0
esac

#Build libraries for python 
cd rust_backend/

if [ "$MODE" == debug ]; then
	echo "Running in debug mode"
	cargo build --lib --features="python_api" -p $BUILD
else
	echo "Running in release mode"
	cargo build --lib --features="python_api" --release -p $BUILD
fi

cp ${SO_LTD} ../ltd.so

